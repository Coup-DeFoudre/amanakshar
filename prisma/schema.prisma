generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== BHAV (Themes/Emotions) =====
model Bhav {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  sampleLine  String?
  icon        String?
  color       String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  poems        PoemBhav[]
  performances PerformanceBhav[]

  @@index([slug])
}

// ===== POEMS =====
model Poem {
  id                    String    @id @default(cuid())
  title                 String
  slug                  String    @unique
  text                  String
  poetName              String    @default("à¤…à¤®à¤¨ à¤…à¤•à¥à¤·à¤°")
  writtenDate           DateTime?
  firstPerformanceYear  Int?
  firstPerformancePlace String?
  youtubeUrl            String?
  isFeatured            Boolean   @default(false)
  isPublished           Boolean   @default(false)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  bhavs       PoemBhav[]
  book        Book?       @relation(fields: [bookId], references: [id])
  bookId      String?
  likes       Like[]

  @@index([slug])
  @@index([isPublished])
  @@index([isFeatured])
}

// ===== POEM-BHAV JUNCTION =====
model PoemBhav {
  poem   Poem   @relation(fields: [poemId], references: [id], onDelete: Cascade)
  poemId String
  bhav   Bhav   @relation(fields: [bhavId], references: [id], onDelete: Cascade)
  bhavId String

  @@id([poemId, bhavId])
  @@index([bhavId])
}

// ===== BOOKS =====
model Book {
  id             String   @id @default(cuid())
  title          String
  slug           String   @unique
  description    String?
  coverImage     Bytes?
  coverImageType String?
  year           Int?
  purchaseUrl    String?
  isFeatured     Boolean  @default(false)
  isPublished    Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  poems Poem[]

  @@index([slug])
  @@index([isPublished])
}

// ===== PERFORMANCES =====
model Performance {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  context     String?
  youtubeUrl  String
  type        String   @default("à¤•à¤µà¤¿-à¤¸à¤®à¥à¤®à¥‡à¤²à¤¨")
  isFeatured  Boolean  @default(false)
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bhavs PerformanceBhav[]

  @@index([slug])
  @@index([type])
  @@index([isPublished])
}

// ===== PERFORMANCE-BHAV JUNCTION =====
model PerformanceBhav {
  performance   Performance @relation(fields: [performanceId], references: [id], onDelete: Cascade)
  performanceId String
  bhav          Bhav        @relation(fields: [bhavId], references: [id], onDelete: Cascade)
  bhavId        String

  @@id([performanceId, bhavId])
  @@index([bhavId])
}

// ===== ADMIN =====
model Admin {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ===== SITE SETTINGS =====
model SiteSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String

  @@index([key])
}

// ===== CONTACT SUBMISSIONS =====
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  eventType String?
  message   String
  isRead    Boolean  @default(false)
  status    String   @default("pending") // pending, responded, archived
  createdAt DateTime @default(now())

  @@index([isRead])
  @@index([status])
  @@index([createdAt])
}

// ===== FEATURED CONTENT =====
model FeaturedContent {
  id          String   @id @default(cuid())
  type        String
  contentId   String?
  customText  String?
  position    Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([isActive])
}

// ===== HOMEPAGE SECTIONS =====
model HomepageSection {
  id           String   @id @default(cuid())
  sectionKey   String   @unique
  title        String?
  subtitle     String?
  content      Json
  imageUrl     String?
  imageBytes   Bytes?
  imageType    String?
  isActive     Boolean  @default(true)
  displayOrder Int      @default(0)
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

  @@index([sectionKey])
  @@index([isActive])
  @@index([displayOrder])
}

// ===== EVENTS (Live/Upcoming Performances) =====
model Event {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  description  String?
  eventDate    DateTime
  eventTime    String?
  venue        String?
  venueAddress String?
  city         String?
  state        String?
  isLive       Boolean  @default(false)
  isPublished  Boolean  @default(false)
  isPaid       Boolean  @default(false)
  price        Float?
  imageUrl     String?
  ticketUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([slug])
  @@index([eventDate])
  @@index([isPublished])
  @@index([isLive])
  @@index([isPaid])
}

// ===== LIKES (Poem Likes) =====
model Like {
  id         String   @id @default(cuid())
  poemId     String
  poem       Poem     @relation(fields: [poemId], references: [id], onDelete: Cascade)
  browserUuid String
  createdAt  DateTime @default(now())

  @@unique([poemId, browserUuid])
  @@index([poemId])
  @@index([browserUuid])
}

// ===== NOTIFICATION SUBSCRIPTIONS =====
model NotificationSubscription {
  id        String   @id @default(cuid())
  endpoint  String   @unique
  keys      Json     // { p256dh: string, auth: string }
  userId    String?  // Optional user identifier
  createdAt DateTime @default(now())

  @@index([endpoint])
}

// ===== NOTIFICATION LOG =====
model NotificationLog {
  id            String   @id @default(cuid())
  title         String
  body          String
  recipientCount Int     @default(0)
  sentAt        DateTime @default(now())

  @@index([sentAt])
}